{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "make -j test",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Lazybox",
            "type": "shell",
            "command": "make -j",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Configure",
            "type": "shell",
            "command": "make -j menuconfig",
            "problemMatcher": "$gcc"
        }
    ]
}